{
    "extends": "tslint-microsoft-contrib",
    "rules": {
        "await-promise": [
            true,
            "Thenable"
        ],
        "no-backbone-get-set-outside-model": false,
        "no-console": [
            false,
            "debug",
            "info",
            "log",
            "time",
            "timeEnd",
            "trace"
        ],
        "no-increment-decrement": false,
        "strict-boolean-expressions": [
            true,
            "allow-string",
            "allow-undefined-union",
            "allow-null-union",
            "allow-boolean-or-undefined",
            "allow-mix",
            "allow-number"
        ],
        "completed-docs": [
            false,
            "classes"
        ],
        "export-name": false,
        "function-name": [
            true,
            {
                "static-method-regex": "^[a-z][\\w_]+$"
            }
        ],
        "import-name": false,
        "max-line-length": [
            false,
            140
        ],
        "member-access": false,
        "member-ordering": [
            false,
            {
                "order": "fields-first"
            }
        ],
        "missing-jsdoc": false,
        "no-parameter-properties": false,
        "no-relative-imports": false,
        "no-unnecessary-local-variable": false,
        "no-void-expression": [
            true,
            "ignore-arrow-function-shorthand"
        ],
        "prefer-const": false,
        "typedef": [
            true,
            "call-signature",
            // "arrow-call-signature",
            "parameter",
            // "arrow-parameter",
            "property-declaration",
            // "variable-declaration",
            "member-variable-declaration"
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ],
        "linebreak-style": false,
        "newline-before-return": false,
        "no-single-line-block-comment": false,
        "quotemark": [
            false,
            "single"
        ],
        "trailing-comma": [
            true,
            {
                "singleline": "never",
                "multiline": "ignore"
            }
        ],
        "no-unexternalized-strings": [
            false,
            {
                "signatures": [
                    "localize",
                    "nls.localize"
                ],
                "keyIndex": 0,
                "messageIndex": 1
            }
        ],
        "radix": false,
        "no-use-before-declare": false
    },
    "linterOptions": {
        "exclude": [
            "**/*.d.ts"
        ]
    }
}
